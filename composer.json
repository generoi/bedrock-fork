{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "http://languages.koodimonni.fi"
    },
    {
      "type":"package",
      "package": {
        "name": "wpackagist-plugin/gravityforms",
        "version":"1.9.13.16",
        "type": "wordpress-plugin",
        "dist": {
          "url": "./lib/wp-plugins/gravityforms_1.9.13.16.zip",
          "type": "zip"
        }
      }
    },
    {
      "type":"package",
      "package": {
        "name": "wpackagist-plugin/gravityforms-multilingual",
        "version":"1.3.3",
        "type": "wordpress-plugin",
        "dist": {
          "url": "./lib/wp-plugins/gravityforms-multilingual.1.3.3.zip",
          "type": "zip"
        }
      }
    },
    {
      "type":"package",
      "package": {
        "name": "wpackagist-plugin/sitepress-multilingual-cms",
        "version":"3.2.7",
        "type": "wordpress-plugin",
        "dist": {
          "url": "./lib/wp-plugins/sitepress-multilingual-cms.3.2.7.zip",
          "type": "zip"
        }
      }
    },
    {
      "type":"package",
      "package": {
        "name": "wpackagist-plugin/wpml-media",
        "version":"2.1.13",
        "type": "wordpress-plugin",
        "dist": {
          "url": "./lib/wp-plugins/wpml-media.2.1.13.zip",
          "type": "zip"
        }
      }
    },
    {
      "type":"package",
      "package": {
        "name": "wpackagist-plugin/wpml-string-translation",
        "version":"2.2.6",
        "type": "wordpress-plugin",
        "dist": {
          "url": "./lib/wp-plugins/wpml-string-translation.2.2.6.zip",
          "type": "zip"
        }
      }
    },
    {
      "type":"package",
      "package": {
        "name": "wpackagist-plugin/wpml-translation-management",
        "version":"2.0.4",
        "type": "wordpress-plugin",
        "dist": {
          "url": "./lib/wp-plugins/wpml-translation-management.2.0.4.zip",
          "type": "zip"
        }
      }
    },
    {
      "type":"package",
      "package": {
        "name": "patched/wp-editor-widget",
        "version":"0.5.5",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://github.com/oxyc/wp-editor-widget/archive/master.zip",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.7",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "1.0.0",

    "koodimonni-language/fi": "*",
    "koodimonni-language/sv_se": "*",

    "wpackagist-plugin/akismet": ">=3.1.1",
    "wpackagist-plugin/display-widgets": ">=2.03",
    "wpackagist-plugin/pods": ">=2.5.3",
    "wpackagist-plugin/regenerate-thumbnails": ">=2.2.4",
    "wpackagist-plugin/remove-widget-titles": "*",
    "wpackagist-plugin/widget-image-field": ">=0.3",
    "wpackagist-plugin/wp-mail-smtp": "*",
    "wpackagist-plugin/scalable-vector-graphics-svg": "*",
    "wpackagist-plugin/tinymce-advanced": "*",
    "wpackagist-plugin/widget-css-classes": "*",

    "wpackagist-plugin/wordpress-seo": ">=2.3.4",
    "wpackagist-plugin/google-analytics-for-wordpress": ">=5.4.6",
    "wpackagist-plugin/duracelltomi-google-tag-manager": "^1.1.1",
    "wpackagist-plugin/redirection": "*",

    "wpackagist-plugin/gravityforms": "1.9.13.16",
    "wpackagist-plugin/gravityforms-multilingual": "1.3.3",

    "wpackagist-plugin/sitepress-multilingual-cms": "3.2.7",
    "wpackagist-plugin/wpml-media": "2.1.13",
    "wpackagist-plugin/wpml-string-translation": "2.2.6",
    "wpackagist-plugin/wpml-translation-management": "2.0.4",

    "wpackagist-plugin/wp-super-cache": ">=1.4.6",
    "wpackagist-plugin/wp-super-cache-clear-cache-menu": "*",
    "wpackagist-plugin/autoptimize": "*",
    "wpackagist-plugin/wp-performance-pack": "*",
    "wpackagist-plugin/ewww-image-optimizer": "*",

    "wpackagist-plugin/wp-xhprof-profiler": "*",
    "wpackagist-plugin/debug-bar": ">=0.8.1",
    "wpackagist-plugin/kint-debugger": ">=0.2",

    "wpackagist-plugin/timber-library": "*",
    "wpackagist-plugin/debug-bar-timber": "*",

    "patched/wp-editor-widget": "0.5.5",
    "roots/soil": "3.5.0"

  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "dropin-paths": {
      "web/app/languages/": ["vendor:koodimonni-language"],
      "web/app/languages/plugins/": ["vendor:koodimonni-plugin-language"],
      "web/app/languages/themes/": ["vendor:koodimonni-theme-language"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
    ]
  }
}
